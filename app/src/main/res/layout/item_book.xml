<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/book_image_view"
        android:layout_width="65dp"
        android:layout_height="65dp"
        android:layout_marginBottom="5dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="5dp"
        android:scaleType="fitXY"
        android:src="@drawable/java_logo"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="ContentDescription" />

    <TextView
        android:id="@+id/book_name_text_view"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="5dp"
        android:layout_marginStart="10dp"
        android:textColor="#dc000000"
        android:textSize="16sp"
        app:layout_constraintLeft_toRightOf="@+id/book_image_view"
        app:layout_constraintRight_toLeftOf="@+id/right_arrow_image_view"
        app:layout_constraintTop_toTopOf="@+id/book_image_view"
        tools:text="The Java Programming Language" />

    <TextView
        android:id="@+id/book_author_text_view"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="5dp"
        android:layout_marginStart="10dp"
        android:textColor="#a9a9a9"
        android:textSize="13sp"
        app:layout_constraintLeft_toRightOf="@+id/book_image_view"
        app:layout_constraintRight_toLeftOf="@+id/right_arrow_image_view"
        app:layout_constraintTop_toBottomOf="@+id/book_name_text_view"
        tools:text="James Gosling and ken Arnold" />

    <TextView
        android:id="@+id/edition_text_view"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="5dp"
        android:layout_marginStart="10dp"
        android:textColor="#6c6c6c"
        android:textSize="13sp"
        app:layout_constraintLeft_toRightOf="@+id/book_image_view"
        app:layout_constraintRight_toLeftOf="@+id/right_arrow_image_view"
        app:layout_constraintTop_toBottomOf="@+id/book_author_text_view"
        tools:text="2nd Edition" />

    <ImageView
        android:id="@+id/right_arrow_image_view"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_marginEnd="10dp"
        android:src="@drawable/ic_arrow_right"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="ContentDescription" />

</android.support.constraint.ConstraintLayout>