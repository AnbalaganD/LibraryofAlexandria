<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    
    <ImageView
        android:id="@+id/book_image_view"
        android:layout_width="65dp"
        android:layout_height="65dp"
        android:src="@drawable/java_logo"
        android:scaleType="fitXY"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"/>

    <TextView
        android:id="@+id/book_name_text_view"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        tools:text="The Java Programming Language"
        android:textColor="#dc000000"
        android:textSize="16sp"
        app:layout_constraintLeft_toRightOf="@+id/book_image_view"
        app:layout_constraintRight_toLeftOf="@+id/right_arrow_image_view"
        app:layout_constraintTop_toTopOf="@+id/book_image_view"
        android:layout_marginRight="5dp"
        android:layout_marginLeft="10dp"/>

    <TextView
        android:id="@+id/book_author_text_view"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        tools:text="James Gosling and ken Arnold"
        android:textColor="#a9a9a9"
        android:textSize="13sp"
        app:layout_constraintLeft_toRightOf="@+id/book_image_view"
        app:layout_constraintRight_toLeftOf="@+id/right_arrow_image_view"
        app:layout_constraintTop_toBottomOf="@+id/book_name_text_view"
        android:layout_marginRight="5dp"
        android:layout_marginLeft="10dp"/>

    <TextView
        android:id="@+id/edition_text_view"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        tools:text="2nd Edition"
        android:textColor="#6c6c6c"
        android:textSize="13sp"
        app:layout_constraintLeft_toRightOf="@+id/book_image_view"
        app:layout_constraintRight_toLeftOf="@+id/right_arrow_image_view"
        app:layout_constraintTop_toBottomOf="@+id/book_author_text_view"
        android:layout_marginRight="5dp"
        android:layout_marginLeft="10dp"/>

    <ImageView
        android:id="@+id/right_arrow_image_view"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:src="@drawable/right_arrow"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginRight="10dp"/>

</android.support.constraint.ConstraintLayout>